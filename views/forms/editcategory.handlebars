{{#each errors}}
	<div class="error-msg">
		{{this}}
	</div>
{{/each}}

<h1>Update category</h1>
<form method="POST" action="">
	<label for="name">Name</label>
	<input type="text" name="name" value="{{category.name}}" required>
	<br>

	<label for="description">Description</label>
	<input type="text" name="description" value="{{category.description}}" required>
	<br>

	<label for="url">URL</label>
	<input type="text" name="url" value="{{category.url}}" required>
	<br>
	
	<label for="admin_pwd">Insert your password to continue:</label>
	<input type="password" name="admin_pwd"><br>
	
	<input type="submit" value="Add">
</form>